@page "/dang-ky"
@model RegisterModel

@{
    ViewData["Title"] = "Đăng ký";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- Hiển thị lỗi tổng hợp -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="Địa chỉ email" />
                <label asp-for="Input.Email">Địa chỉ Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Mật khẩu" />
                <label asp-for="Input.Password">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword"
                       class="form-control"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Xác nhận mật khẩu" />
                <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Nút Đăng ký -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                Đăng ký
            </button>
        </form>
    </div>

    <div class="col-md-6 offset-md-2">
        <section>
            <h3>Đăng ký bằng dịch vụ khác</h3>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        Hiện chưa cấu hình dịch vụ xác thực bên ngoài.
                        Xem hướng dẫn
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715">này</a>
                        để cấu hình đăng nhập/đăng ký qua bên thứ ba.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account"
                      asp-page="./ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl"
                      method="post"
                      class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        class="btn btn-primary me-2"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Đăng nhập/đăng ký qua @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
