@page "/dang-nhap"
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Đăng nhập bằng tài khoản cục bộ</h2>
                <hr />
                
                <!-- Hiển thị lỗi tổng hợp -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.UsernameOrEmail"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="Email" />
                    <label asp-for="Input.UsernameOrEmail" class="form-label">Địa chỉ Email</label>
                    <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
                </div>
                
                <!-- Mật khẩu -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Mật khẩu" />
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <!-- Ghi nhớ đăng nhập -->
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>
                
                <!-- Nút Đăng nhập -->
                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        Đăng nhập
                    </button>
                </div>
                
                <!-- Liên kết khác -->
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Đăng ký tài khoản mới
                        </a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                            Gửi lại email xác nhận
                        </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
    <div class="col-md-6 offset-md-2">
        <section>
            <h3>Đăng nhập bằng dịch vụ khác</h3>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        Hiện chưa cấu hình dịch vụ xác thực bên ngoài.
                        Xem hướng dẫn 
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                            này
                        </a>
                        để đăng nhập qua bên thứ ba.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account"
                      asp-page="./ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl"
                      method="post"
                      class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        class="btn btn-primary me-2"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Đăng nhập bằng @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
